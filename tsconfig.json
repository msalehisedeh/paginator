{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2020"],
    "declaration": true,
    "types": [],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": true
  },
  "include": ["src/index.js", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}